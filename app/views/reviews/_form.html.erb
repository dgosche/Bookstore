<%= form_for([@book,@review]) do |f| %>
	<%= render 'shared/errors', object: @review %>
	<fieldset>
		<ol>
			<li class="required">
				<%= f.label :comment %>
				<%= f.text_field :comment, rows: 5, cols: 70 %>
			</li>
			<li class="required">
				<%= f.label :stars %>
				<%= f.number_field :stars %>
			</li>
		</ol>
		<p>
			<% if @user.new_record? %>
				<%= f.submit "Create Account" %>
			<% else %>
				<%= f.submit "Update Account" %>
			<% end %>
		</p>
	</fieldset>
<% end %>
